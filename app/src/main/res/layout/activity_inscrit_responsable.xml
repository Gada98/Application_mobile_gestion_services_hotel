<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Formulaire d'inscription de responsable"
            android:textColor="#090707"
            android:textSize="18sp"
            app:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nom"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/round_edittext"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:hint="Entrer Nom"
            android:inputType="textPersonName"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/prénom"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/round_edittext"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:hint="Entrer Prénom"
            android:inputType="textPersonName"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nationalité"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/round_edittext"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:hint="Entrer Nationalité"
            android:inputType="textPersonName"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/N_CIN"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/round_edittext"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:hint="Entrer N_CIN"
            android:inputType="textPersonName"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/adresse"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:ems="10"
            android:hint="Entrer Adresse"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:background="@drawable/round_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/numéro_téléphone"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:ems="10"
            android:hint="Entrer numéro de téléphone"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:background="@drawable/round_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/email"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:ems="10"
            android:hint="Entrer Email"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:background="@drawable/round_edittext"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Pseudo"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:ems="10"
            android:hint="Entrer Login"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:background="@drawable/round_edittext"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Mot_de_passe"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/round_edittext"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:hint="Entrer Password"
            android:inputType="textPersonName"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reg"
            style="@android:style/Widget.DeviceDefault.Button.Inset"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/btn1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/select_langue"
            android:textColor="#030202"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>